<%
def duration(interval)
  d = interval / 86400
  h = interval / 3600 % 24
  m = interval / 60 % 60
  s = interval % 60

  if d > 0
    "%d days, %02d:%02d:%02d" % [d, h, m, s]
  else
    "%02d:%02d:%02d" % [h, m, s]
  end
end

def time(t)
  return '---' unless t
  t.localtime.strftime("%Y-%m-%d %H:%M:%S")
end

def truncate(arr, cnt = 10)
  return arr if arr.size <= cnt
  n = arr.size / cnt
  (n - 1).step(arr.size - 1, n).map { |i| arr[i] }[0..(cnt - 1)]
end
